!!! 5
%html
  %head
    %title LikeCounter
    = stylesheet_link_tag    "application", :media => "all"
    = javascript_include_tag "application"
    = csrf_meta_tags
  %body
    .container
      - flash.each do |key, val|
        %div{ class: "alert alert-#{key}"}= val
      = yield
      - if Rails.env.development?
        = debug(params)
        = debug(current_user.name) if current_user
