%header.navbar.navbar-fixed-top
  .navbar-inner
    .container
      = link_to "WorthReading", root_path, id: "logo"
      %nav
        %ul.nav.pull-right
          - unless signed_in?
            %li= link_to "Home", root_path
            %li.divider-vertical
            = form_for(:session, url: sessions_path, html: { class: "form-horizontal" }) do |f|
              %table
                %td
                  = f.text_field :email, placeholder: 'Email', 
                      class: "input-medium sign-in"
                %td
                  = f.password_field :password, placeholder: 'Password', 
                      class: "input-medium sign-in"
                %td
                  = f.submit "Sign in"
          - else
            %li= link_to "Home", root_path
            %li= link_to "Sign out", signout_path, method: 'delete' 



